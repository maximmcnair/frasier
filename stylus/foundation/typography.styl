body
  font-family $primaryTypeface
  color $colorTypeSecondary
  font-size 16px

h1
h2
h3
h4
h5
h6
  margin 0
  color $colorTypePrimary

h1
  font-size 29px
  font-weight 700

h2
  font-size 16px
  font-weight 700
  margin-bottom 5px
  text-transform uppercase

h3
  font-size 21px
  font-weight 700

h4
  font-size 18px
  font-weight 600

h5
  font-size 18px
  font-weight 600

h6
  font-size 16px
  font-weight 400
  margin 0px 0px 7px 0px

p
  font-size 16px
  line-height 27px
  margin-top 0px

small
strong
b
  font-weight 700
  // font-style italic

.title--centered
  display block
  text-align center
  color $colorTypeSecondary
  margin-bottom 35px

a
  text-decoration none
  color $colorBlue
  cursor pointer
  font-weight 700
  transition all .3s
  &:hover
  &:focus
    color lighten($colorBlue, 10%)

blockquote
  border-left 5px solid #f9fafb
  margin 0
  padding-left 15px
  p
    font-size 20px
    line-height 28px
  cite p
    font-size 15px
    font-weight 800

.text-right
  text-align right !important

.small-centred
  @extends small
  text-align center
  display block
  color $colorTypeSecondary
  padding-top 20px

//========================================================
//  White background
//========================================================
::-moz-selection
  color #fff
  background $colorBlue
  text-shadow none

::selection
  color #fff
  background $colorBlue
  text-shadow none

//========================================================
//  Truncate Ellipsis
//========================================================
.truncate-ellipsis
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  display block